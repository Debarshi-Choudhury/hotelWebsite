extends layout

block content
	h1 Register
	p Please register using the form below

	ul.errors
		if errors
			each error,i in errors
				li.alert #{error.msg}
	form(method='post',action='/users/register',enctype='url-encoded')
		.form-group
			label Name
			input.form-control(name='name',type='text',value=name)
		.form-group
			label Email
			input.form-control(name='email',type='email',value=email)
		.form-group
			label Username
			input.form-control(name='username',type='text',value=username)
		.form-group
			label Password
			input.form-control(name='password',type='password',placeholder='acha sa password de')
		.form-group
			label Confirm password
			input.form-control(name='password2',type='password')
		#button_id
			input.btn(name='submit',type='submit',value='Register')
	a(href='/users/login') Already have an account
