extends layout

block content
	h1 Login
	p Please login below
	form(method='post',action='/users/login')
		.form-group
			label Username
			input.form-control(name='username',type='text')
		.form-group
			label Password
			input.form-control(name='password',type='password')
		input.btn(name='submit',type='submit',value='Login')
	a(href='/users/register') Wanna sign up